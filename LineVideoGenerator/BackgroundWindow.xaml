<Window x:Class="LineVideoGenerator.BackgroundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="背景" Height="200" Width="200" Closed="Window_Closed" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0 20 0 20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="画像" Grid.Row="0" Click="ImageButton_Click"/>
        <Button Content="動画" Grid.Row="1" Click="AnimationButton_Click"/>
        <Button x:Name="resetButton" Content="リセット" Grid.Row="2" IsEnabled="False" Click="ResetButton_Click"/>
    </Grid>
</Window>
